<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9DB"
    tools:context=".view.DetalhesEpiFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="DETALHES"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="177dp"
        android:src="@drawable/capacete_removebg_preview"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="276dp"
        android:layout_height="27dp"
        android:ems="10"
        android:text="CAPACETE DE SEGURANÇA"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:ems="10"
        android:text="Validade: 5 anos, desde que as condições estejam corretas."
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:layout_width="244dp"
        android:layout_height="56dp"
        android:ems="10"
        android:text="Data de validade: recomenda a troca do capacete a cada 3 ou 5 anos, ou com qualquer tipo de dano."
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:ems="10"
        android:text="CA: 8304 - CAPACETE CLASSE A - MSA DO BRASIL EQUIP E INSTRUMENTOS DE SEGURANÇA LTDA."
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="238dp"
        android:layout_height="21dp"
        android:ems="10"
        android:text="DESCRIÇÃO:"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:layout_width="366dp"
        android:layout_height="123dp"
        android:ems="10"
        android:text="O objetivo do capacete é proteger a cabeça reduzindo os impactos causados em um eventual acidente. Além disso, as viseiras protegem os olhos e o rosto contra impactos da chuva, insetos, poeira e outros detritos."
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="415dp"
        android:layout_height="78dp"
        android:background="#FFEB3B"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="658dp" />




</androidx.constraintlayout.widget.ConstraintLayout>