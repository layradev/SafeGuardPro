<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9DB">


    <TextView
        android:id="@+id/tvDadosFuncionario"
        android:layout_width="361dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:text="DADOS FUNCIONÁRIO:"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNomeFuncionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do funcionario:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDadosFuncionario" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEpis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeFuncionario"
        tools:listitem="@layout/list_item_epi" />

</androidx.constraintlayout.widget.ConstraintLayout>